<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_random_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/random_number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_worker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/start_worker"
            app:layout_constraintEnd_toEndOf="@+id/tv_random_number"
            app:layout_constraintStart_toStartOf="@+id/tv_random_number"
            app:layout_constraintTop_toBottomOf="@+id/tv_random_number" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_stop_worker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/stop_worker"
            app:layout_constraintEnd_toEndOf="@+id/btn_start_worker"
            app:layout_constraintStart_toStartOf="@+id/btn_start_worker"
            app:layout_constraintTop_toBottomOf="@+id/btn_start_worker" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>